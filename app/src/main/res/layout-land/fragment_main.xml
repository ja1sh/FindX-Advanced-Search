<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        tools:context="me.jaisharma.findx.advancedsearch.MainActivityFragment"
        tools:showIn="@layout/activity_main">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-6513478276698267/8164680343"
            ads:layout_constraintTop_toBottomOf="@+id/editIndex"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/editSite"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginEnd="51dp"
            android:layout_marginStart="51dp"
            android:background="@layout/custom_corner"
            android:ems="10"
            android:hint="site"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="16dp"
            android:text="Site"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#7f8c8d"
            android:textSize="12sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/editFile"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginEnd="51dp"
            android:layout_marginStart="51dp"
            android:background="@layout/custom_corner"
            android:ems="10"
            android:hint="filetype"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="16dp"
            android:text="File Type"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#7f8c8d"
            android:textSize="12sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editSite" />


        <EditText
            android:id="@+id/editUrl"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginEnd="51dp"
            android:layout_marginStart="51dp"
            android:background="@layout/custom_corner"
            android:ems="10"
            android:hint="inurl"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="16dp"
            android:text="In URL"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#7f8c8d"
            android:textSize="12sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editFile" />


        <EditText
            android:id="@+id/editTitle"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginEnd="51dp"
            android:layout_marginStart="51dp"
            android:background="@layout/custom_corner"
            android:ems="10"
            android:hint="intitle"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="16dp"
            android:text="In Title"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#7f8c8d"
            android:textSize="12sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editUrl" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="16dp"
            android:text="Index Of"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textColor="#7f8c8d"
            android:textSize="12sp"
            android:typeface="sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTitle" />


        <EditText
            android:id="@+id/editIndex"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginEnd="51dp"
            android:layout_marginStart="51dp"
            android:background="@layout/custom_corner"
            android:ems="10"
            android:hint="index of"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:layout_marginEnd="85dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_security"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="65dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/cabin_medium"
            android:text="More power to your searching"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#ecf0f7"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:typeface="sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>